<form action="/stars" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
<h3>Lets create a new star:</h3>
    <label for="name">Star Name:</label><br>
    <input type="text" id="name" name="name"><br>
<br>
    <label for="star_type">Star Type:</label><br>
    <input type="text" id="star_type" name="star_type"><br>
<br>
    <label for="age">Star Age (in billons):</label><br>
    <input type="number" step="0.00001"id="age" name="age"><br>
<br>
    <label for="size">Star Mass:</label><br>
    <input type="text" id="size" name="size"><br>
<br>
    <label for="can_nova">Can it go supernova?:</label><br>
    <input type="radio" id="true" name="can_nova" value="true">
    <label for="true">true</label>
    <input type="radio" id="false" name="can_nova" value="false">
    <label for="false">false</label><br>
<br>

  <input type="submit" value="Submit">
</form>