<%= form_with url: "/stars/#{@star.id}", method: :patch, local: true do |form| %>
<%= form.label :name, "Star Name" %>
<%= form.text_field :name %>
<br>
<br>
<%= form.label :star_type, "Star Type" %>
<%= form.text_field :star_type%>
<br>
<br>
<%= form.label :age, "Star Age (in billons)" %>
<%= form.number_field :age, step:0.00001 %>
<br>
<br>
<%= form.label :size, "Mass" %>
<%= form.text_field :size%>
<br>
<br>
<%= form.label :can_nova, "Can it supernova" %>
<%= form.collection_check_boxes(:can_nova, [[true, 'Yes'] ,[false, 'No']], :first, :last) do |b|
    b.label { b.check_box + b.text }
end %>
<br>
<br>
<%= form.submit "Update Star"%>
<% end %>





