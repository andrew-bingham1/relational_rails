<form action="/stars/<%=@star.id %> "method="post"> 
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />

   <label for="name">Star Name:</label><br>
    <input type="text" name="name" value="<%= @star.name %>"><br>
      <br>
    <label for="star_type">Star Type:</label><br>
    <input type="text" name="star_type" value="<%= @star.star_type %>"><br>
      <br>
    <label for="age">Star Age (in billons):</label><br>
    <input type="number" step="0.00001" name="age" value="<%= @star.age%>"><br>
      <br>
    <label for="size">Star Mass:</label><br>
    <input type="text" name="size" value="<%= @star.size%>"><br>
      <br>
    <label for="can_nova">Can it supernova?:</label><br>
    <input type="radio" name="can_nova" value="<%= @star.can_nova%>">
    <label for="true">true</label>
    <input type="radio" name="can_nova" value="<%= @star.can_nova%>">
    <label for="false">false</label><br>
      <br>
    <input type="submit" value="Submit">
</form>